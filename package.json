{
  "name": "event-ticketing-platform",
  "version": "1.0.0",
  "description": "Event ticketing platform built with Go, HTMX, and TailwindCSS",
  "scripts": {
    "build-css": "tailwindcss -i ./web/static/css/tailwind.css -o ./web/static/css/output.css --watch",
    "build-css-prod": "tailwindcss -i ./web/static/css/tailwind.css -o ./web/static/css/output.css --minify",
    "install-deps": "bun install"
  },
  "devDependencies": {
    "@tailwindcss/forms": "^0.5.7",
    "@tailwindcss/typography": "^0.5.10",
    "tailwindcss": "^3.4.0"
  }
}