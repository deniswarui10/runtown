package pages

import "event-ticketing-platform/internal/models"
import "event-ticketing-platform/web/templates/layouts"
import "event-ticketing-platform/web/templates/components"

templ HomePage(user *models.User, featuredEvents []*models.Event, upcomingEvents []*models.Event) {
	@layouts.BaseLayout("Home", user) {
		<!-- Hero Section -->
		<section class="bg-gradient-to-r from-blue-600 to-blue-800 text-white">
			<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-20">
				<div class="text-center">
					<h1 class="text-4xl md:text-6xl font-bold mb-6">
						Discover Amazing Events
					</h1>
					<p class="text-xl md:text-2xl mb-8 text-blue-100">
						Find and book tickets for concerts, conferences, workshops, and more
					</p>
					<!-- Search Bar -->
					<div class="max-w-2xl mx-auto">
						<form hx-get="/search" hx-target="#search-results" class="flex flex-col md:flex-row gap-4">
							<div class="flex-1">
								<input
									type="text"
									name="q"
									placeholder="Search for events, artists, or venues..."
									class="w-full px-6 py-4 text-gray-900 rounded-lg focus:ring-2 focus:ring-blue-300 focus:outline-none text-lg"
								/>
							</div>
							<button
								type="submit"
								class="bg-gray-600 hover:bg-gray-700 text-white px-8 py-4 rounded-lg font-medium transition-colors text-lg"
							>
								Search Events
							</button>
						</form>
						<div id="search-results" class="mt-4"></div>
					</div>
				</div>
			</div>
		</section>
		<!-- Featured Events Section -->
		if len(featuredEvents) > 0 {
			<section class="py-16 bg-white">
				<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
					<div class="text-center mb-12">
						<h2 class="text-3xl font-bold text-gray-900 mb-4">Featured Events</h2>
						<p class="text-lg text-gray-600">Don't miss these amazing upcoming events</p>
					</div>
					<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
						for _, event := range featuredEvents {
							@components.EventCard(event, true)
						}
					</div>
				</div>
			</section>
		}
		<!-- Categories Section -->
		<section class="py-16 bg-gray-50">
			<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
				<div class="text-center mb-12">
					<h2 class="text-3xl font-bold text-gray-900 mb-4">Browse by Category</h2>
					<p class="text-lg text-gray-600">Find events that match your interests</p>
				</div>
				<div class="grid grid-cols-2 md:grid-cols-4 lg:grid-cols-6 gap-6">
					@CategoryCard("Music", "ğŸµ", "/events?category=music")
					@CategoryCard("Technology", "ğŸ’»", "/events?category=technology")
					@CategoryCard("Business", "ğŸ’¼", "/events?category=business")
					@CategoryCard("Arts", "ğŸ¨", "/events?category=arts")
					@CategoryCard("Sports", "âš½", "/events?category=sports")
					@CategoryCard("Food", "ğŸ½ï¸", "/events?category=food")
				</div>
			</div>
		</section>
		<!-- Upcoming Events Section -->
		if len(upcomingEvents) > 0 {
			<section class="py-16 bg-white">
				<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
					<div class="flex items-center justify-between mb-12">
						<div>
							<h2 class="text-3xl font-bold text-gray-900 mb-4">Upcoming Events</h2>
							<p class="text-lg text-gray-600">Events happening soon near you</p>
						</div>
						<a href="/events" class="text-primary-600 hover:text-primary-700 font-medium">
							View All Events â†’
						</a>
					</div>
					<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
						for _, event := range upcomingEvents {
							@components.EventCardCompact(event)
						}
					</div>
				</div>
			</section>
		}
		<!-- CTA Section -->
		<section class="py-16 bg-primary-600">
			<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
				<h2 class="text-3xl font-bold text-white mb-4">Ready to Create Your Event?</h2>
				<p class="text-xl text-primary-100 mb-8">
					Join thousands of organizers who trust EventHub to manage their events
				</p>
				<div class="flex flex-col sm:flex-row gap-4 justify-center">
					if user == nil {
						<a href="/auth/register" class="bg-white text-primary-600 hover:bg-gray-50 px-8 py-3 rounded-lg font-medium transition-colors">
							Get Started Free
						</a>
						<a href="/auth/login" class="border border-white text-white hover:bg-primary-700 px-8 py-3 rounded-lg font-medium transition-colors">
							Sign In
						</a>
					} else {
						<a href="/organizer/events/create" class="bg-white text-primary-600 hover:bg-gray-50 px-8 py-3 rounded-lg font-medium transition-colors">
							Create Your First Event
						</a>
					}
				</div>
			</div>
		</section>
	}
}

templ CategoryCard(name, emoji, link string) {
	<a href={ templ.URL(link) } class="bg-white rounded-lg p-6 text-center hover:shadow-lg transition-shadow group">
		<div class="text-4xl mb-3">{ emoji }</div>
		<h3 class="font-medium text-gray-900 group-hover:text-primary-600 transition-colors">{ name }</h3>
	</a>
}
